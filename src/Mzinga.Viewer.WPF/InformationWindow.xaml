<Window Icon="{DynamicResource MzingaIcon}"
        Loaded="Window_Loaded"
        MinHeight="100"
        ResizeMode="NoResize"
        SizeToContent="Height"
        Title="{Binding Title}"
        Width="480"
        WindowStartupLocation="CenterOwner"
        x:Class="Mzinga.Viewer.InformationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Image Margin="15"
                   Source="{StaticResource InformationIcon32}"
                   VerticalAlignment="Top" />
            <Label Height="Auto"
                   Margin="5"
                   VerticalAlignment="Center"
                   Width="390">
                <Label.Content>
                    <AccessText Text="{Binding Message}"
                                TextWrapping="Wrap" />
                </Label.Content>
            </Label>
        </StackPanel>
        <WrapPanel FlowDirection="RightToLeft">
            <Button Command="{Binding Accept}"
                    Content="OK"
                    IsDefault="True"
                    Margin="5"
                    Style="{DynamicResource CleanButton}"
                    Width="75" />
        </WrapPanel>
    </StackPanel>
</Window>
